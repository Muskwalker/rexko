<h1>Listing authorships</h1>

<table>
  <tr>
  </tr>

<% for authorship in @authorships %>
	<tr>
		<td colspan="3"><%= authorship.cited_name %></td>
    </tr>
    <% unless authorship.sources.empty? %>
    <tr>
		<td colspan="3">
            Cited in: 
		    <% for source in authorship.sources %>
            <% for locus in source.loci %>
                <%= link_to "(#{greek_numeral(locus.id)})", locus %>
            <% end %>
            <% end %>
		</td>
	</tr>
    <% end %>
  <tr>
    <td><%= link_to 'Show', authorship %></td>
    <td><%= link_to 'Edit', edit_authorship_path(authorship) %></td>
    <td><%= link_to 'Destroy', authorship, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New authorship', new_authorship_path %>

<%= will_paginate @authorships %>
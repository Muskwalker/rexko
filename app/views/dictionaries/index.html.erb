<h1>Listing dictionaries</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% for dictionary in @dictionaries %>
  <tr>
    <td>
			<span class="dictform-title" <%= lang_for (dictionary) %>><%=h dictionary.title %></span> 
	 		(<%=h "#{dictionary.source_language.iso_639_code}/#{dictionary.target_language.iso_639_code} " unless dictionary.source_language.nil? || dictionary.target_language.nil? %><%=h "in  #{dictionary.language.iso_639_code}" unless dictionary.language.nil? || dictionary.language.iso_639_code.nil? %>)
		</td>
    <td><%= link_to 'Show', dictionary %></td>
    <td><%= link_to 'Edit', edit_dictionary_path(dictionary) %></td>
    <td><%= link_to 'Destroy', dictionary, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New dictionary', new_dictionary_path %>

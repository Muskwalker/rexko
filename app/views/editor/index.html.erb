<h1>Lexicon</h1>

<h2>Tools</h2>
<% form_tag :controller => :lexemes, :action => :show_by_headword do %>
<ul>
	<li>Find or create a lexeme: <%= text_field_tag :headword %></li>
</ul>
<% end %>

<% form_tag :controller => :loci, :action => :show_by_author do %>
<ul>
	<li>Browse loci by author (substring search): <%= text_field_tag :author %> </li> 
	<li><%=	link_to "Create a locus", :controller => :loci, :action => :new %></li>
</ul>
<% end %>

<h2>Navigation</h2>
<ul>
	<li><%= link_to "Browse languages", :controller => :languages %></li>
	<li><%= link_to "Browse dictionaries", :controller => :dictionaries %></li>
	<li><%= link_to "Browse all lexemes", :controller => :lexemes %></li>
	<li><%= link_to "Browse all loci", :controller => :loci %></li>
</ul>

<h2>Things to do</h2>
<table width="75%">
	<tr>
		<td valign="top" width="50%">
			<h3>Addlist</h3>
			
			<%= ten_most_wanted %>
		</td>
		<td valign="top">
			<h3>Expandlist</h3>	
			
			<%= expandlist %>
		</td>
	</tr>
</table>

<h1>New etymology</h1>

<%= error_messages_for :etymology %>

<% form_for(@etymology) do |f| %>
  <p>
    <b>Etymon</b><br />
    <%= f.text_field :etymon %>
  </p>

  <p>
    <b>Source language</b><br />
    <%= f.collection_select :original_language_id, Language.all, :id, :to_s, { :include_blank => true } %>
  </p>

  <p>
    <b>Gloss</b><br />
    <%= f.text_field :gloss %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', etymologies_path %>

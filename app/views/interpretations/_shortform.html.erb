<dd>
    <%= f.label :sense_id, '<abbr class="dimmed" title="Sense">S</abbr>&nbsp;'.html_safe %>
    <%= f.grouped_collection_select :sense_id, 
    sense_select(@interpretations ? 
    @interpretations[parse.parsed_form] :
    parse.potential_interpretations), 
    :last, :first, :last, :first,
    {:include_blank => true}, {style: "width:100px; min-width:100%", class: 'combobox' } if defined?(parse) && parse.present? %> 
</dd>
<dd class="comboform" style="display:none">
    <%= f.fields_for :sense, Sense.new do |s_form| %>
    <%= s_form.text_field :definition, size: width, placeholder: 'Add new sense' %>
    <% end %>
</dd>
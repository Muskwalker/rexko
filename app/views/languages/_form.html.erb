<%= form_for @language, {:method => form[:method], :action => form[:action], :html => {:class => "yform"}} do |f| %>
	<div class="type-text">
		<label for="language_default_name">Name:</label>
		<%= f.text_field :default_name %>
	</div>

	<div class="type-text">
		<label for="language_iso_639_code">Code:</label>
		<%= f.text_field :iso_639_code %>
	</div>

  <div class="type-button">
    <%= f.submit form[:label] %>
  </div>
<% end %>

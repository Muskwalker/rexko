<h1><%= t("languages.index.listing_languages", :default => "Listing languages") %></h1>

<table>
  <tr>
  </tr>

<% for language in @languages %>
  <tr>
		<td><%= h language %></td>
    <td><%= link_to t("languages.index.show", :default => 'Show'), language %></td>
    <td><%= link_to t("languages.index.edit", :default => 'Edit'), edit_language_path(language) %></td>
    <td><%= link_to t("languages.index.destroy", :default => 'Destroy'), language, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t("languages.index.new_language", :default => 'New language'), new_language_path %>

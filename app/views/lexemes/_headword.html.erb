<% unless (f.object._destroy) %>
	<% nested_attributes_for f, :phonetic_forms %>
	<fieldset class="headword">
		<legend>
			<%= label_with_remove_option_for t('.headword'), f %>
		</legend>
		
		<div class="type-text">
	    	<%= f.label :form, t('.orthographic_form') %>
	    	<%= f.text_field :form %>
            <small>
                <%= t('.acceptibility_html', 
                        descriptively: "<span class=\"type-check\">#{f.check_box :descriptively_ok?} #{ f.label :descriptively_ok? } </span>".html_safe,
                        prescriptively: "<span class=\"type-check\">#{f.check_box :prescriptively_ok?} #{ f.label :prescriptively_ok? } </span>".html_safe) %>
            </small>
	    	<% unattached = Parse.count_unattached_to(f.object.form)
	    		 if unattached > 0 %>
	    	<br/><small>
					<i><%= t('.unattached_html', count: unattached, link: (link_to t('.parse', count: unattached), :controller => "loci", :action => "unattached", :forms => f.object.form) ) %></i>
				</small>
				<% end %>

	  </div>
	
	  <!-- Phonetic form -->
	  	<%= f.fields_for :phonetic_forms do |pf_form| %>
		    <%= render :partial => 'phonetic_form', :locals => { :f => pf_form } %>
		  <% end %>
			<div class="par">
				<%= link_to t('helpers.link_to_add.phonetic form'), '#phonetic_forms', :class => 'add_nested', :rel => "[headword][phonetic_forms]" %>
			</div>
		</ul>

        <!-- Notes -->
		<%= list_children_with_option_to_add :note, f, :remote => true %>
	</fieldset>
<% end %>
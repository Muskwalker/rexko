<% unless (f.object._destroy) %>
	<% nested_attributes_for f, [:glosses, :senses, :subentry], [:notes, :senses, :subentry] %>
    <fieldset class="sense">
        <legend>
            <%= label_with_remove_option_for t('.sense'), f %>
        </legend>
        <div class="type-text">
            <%= f.label :definition %>
            <%= translatable_tag f, :text_area, :definition, :vernacular, rows: 4 %>
        </div>

        <!-- Gloss -->
        <%= list_children_with_option_to_add :gloss, f, :remote => true, :create_blank => true, locals: { dictionaries: @dictionaries } %>

        <!-- Note -->
        <%= list_children_with_option_to_add :note, f, :remote => true, locals: { dictionaries: @dictionaries } %>
    </fieldset>
<% end %>
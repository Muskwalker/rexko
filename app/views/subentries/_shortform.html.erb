	<fieldset class="subentry">
	  <legend>
			<%= label_with_remove_option_for t('lexemes.subentry.subentry'), f %>
		</legend>
		
		<div class="type-text">
	      <%= f.label :paradigm %>
	      <%= translatable_tag f, :text_field, :paradigm, :source %>
	      <%= f.label :part_of_speech %>
	      <%= translatable_tag f, :text_field, :part_of_speech, :vernacular %>
	  </div>
      <%= list_children_with_option_to_add :note, f, :remote => true, locals: { dictionaries: @dictionaries } %>
    
	  <!-- Sense -->
	  <%= list_children_with_option_to_add :sense, f, remote: true, create_blank: true, locals: { dictionaries: @dictionaries } %>

	  <!-- Etymology -->
	  <%= list_children_with_option_to_add :etymothesis, f, remote: true, display_name: 'etymology', locals: { dictionaries: @dictionaries } %>
	</fieldset>